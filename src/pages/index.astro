---
import Layout from '../layouts/Layout.astro';
import GoogleAuthButton from '../components/auth/GoogleAuthButton';
---

<Layout title="Appointment Booking">
  <div class="max-w-7xl mx-auto py-16 px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h1 class="text-4xl font-extrabold text-gray-900 sm:text-5xl sm:tracking-tight lg:text-6xl">
        Book an Appointment
      </h1>
      <p class="mt-5 max-w-xl mx-auto text-xl text-gray-500">
        Simple and easy way to schedule meetings with your consultant.
      </p>
      <div class="mt-8 flex justify-center">
        <GoogleAuthButton client:load />
      </div>
      <div class="mt-8">
        <a 
          href="/appointment-app/test-consultant/book" 
          class="inline-block bg-gray-900 text-white px-6 py-3 rounded-lg hover:bg-gray-800"
        >
          Book with Test Consultant
        </a>
      </div>
    </div>
  </div>
</Layout>